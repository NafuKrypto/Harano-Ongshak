                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Bashundhara R/A ,Dhaka - 1229  dfdjhfj dfhdjfhjdfhj jdfhdjhf"
                   android:textColor="@color/colorBrand3"
                   android:layout_gravity="left"
                   android:fontFamily="@font/baloo"
                   android:textSize="15sp"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="10dp">

               <TextView
                   android:id="@+id/detailsTitleTxt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="left"
                   android:fontFamily="@font/anonymous_pro"
                   android:text="Details"
                   android:textColor="@color/ash"
                   android:textSize="20sp"
                   android:textStyle="bold" />
               <TextView
                   android:id="@+id/detailsTxt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="My thing is stolen uuofjenfobfejnjebbejvbeubebvevuebkjeubevkjevekjvnbkjenvibevkjejvbekveubvev ieubvand i am pissed of af "
